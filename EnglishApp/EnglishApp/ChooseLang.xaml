<Page x:Class="EnglishApp.ChooseLang"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EnglishApp"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="500"
      Title="ChooseLang" Background="Red">

    <StackPanel Background="White" Margin="50 40 50 10">
        <TextBlock Text="Choose your native language" FontSize="30" FontWeight="DemiBold"></TextBlock>
        <Button Margin="0 100 0 0" Content="Russian" Height="60" FontSize="30" Click="Button_Click"/>
        <Button Margin="0 30 0 0" Content="Ukrainian" Height="60" FontSize="30" Click="Button_Click_4"/>
        <Button Margin="0 30 0 0" Content="Polska" Height="60" FontSize="30" Click="Button_Click_1"/>
        <Button Margin="0 30 0 0" Content="Espanol" Height="60" FontSize="30" Click="Button_Click_2"/>
        <Button Margin="0 30 0 0" Content="Hindi" Height="60" FontSize="30" Click="Button_Click_3"/>
    </StackPanel>
</Page>
